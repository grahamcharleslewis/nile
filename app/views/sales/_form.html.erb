<%= form_with(model: sale) do |form| %>
  <%= form.hidden_field :product_id %>
  <%= form.hidden_field :user_id %>

  <div class="d-grid gap-2">
    <% if sale.product.in_stock > 0 %>
      <%= form.submit "Buy", class: "btn btn-success" %>
    <% else %>
      <button type="button" class="btn btn-success" disabled>Buy</button>
    <% end %>
  </div>
<% end %>
